<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/myColor1"
            android:padding="12dp"
            android:weightSum="5"
            android:layout_weight="1">
            <TextView
                android:id="@+id/viewNoteFragmentEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit"
                android:layout_marginEnd="2dp"
                android:textSize="24sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_weight="1" />

            <TextView
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/view_note"
                android:textSize="24sp"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:gravity="center"
                android:textStyle="bold" />

            <TextView
                android:layout_weight="1"
                android:id="@+id/newNoteFragmentSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/send"
                android:textSize="24sp"
                android:textColor="@color/white"
                android:gravity="center" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:weightSum="10"
            android:orientation="vertical">
            <TextView
                android:id="@+id/viewNoteFragmentTitle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textSize="24sp"
                android:paddingHorizontal="4dp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:layout_marginVertical="4dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/viewNoteFragmentDate"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:paddingHorizontal="4dp"
                android:textStyle="italic"
                android:layout_marginVertical="4dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/gray"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/viewNoteFragmentLabel"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:paddingHorizontal="4dp"
                android:textStyle="italic"
                android:layout_marginVertical="4dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/blue"
                android:layout_weight="1"/>

            <TextView
                android:background="@android:color/transparent"
                android:id="@+id/viewNoteFragmentContent"
                android:layout_width="match_parent"
                android:singleLine="false"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif"
                android:gravity="top" />

        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>