<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/fragment_app_topNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/myColor1"
        android:padding="12dp">

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="App Setting"
            android:textSize="24dp"
            android:fontFamily="sans-serif"
            android:textColor="@color/black"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"/>

    </LinearLayout>

    <View
        android:id="@+id/app_fragment_partition"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/fragment_app_topNav"
        android:background="@color/myColor1"
        android:paddingStart="8dp"
        android:paddingRight="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/app_fragment_partition"
        android:orientation="vertical"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:fontFamily="sans-serif"
                android:paddingStart="4dp"
                android:text="Language"
                android:textSize="24dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/settingLanguages"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:paddingStart="4dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="0.01"
            android:background="@color/gray"
            android:paddingStart="24dp"
            android:paddingRight="24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:fontFamily="sans-serif"
                android:paddingStart="4dp"
                android:text="Font"
                android:textSize="24dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/settingFonts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:paddingStart="4dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="0.01"
            android:background="@color/gray"
            android:paddingStart="24dp"
            android:paddingRight="24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:fontFamily="sans-serif"
                android:paddingStart="4dp"
                android:text="Ringtone"
                android:textSize="24dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/settingSounds"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:paddingStart="4dp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>