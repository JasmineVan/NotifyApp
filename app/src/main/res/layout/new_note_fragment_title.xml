<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/myColor1"
            android:padding="12dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/newNoteFragmentHidenBlock"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:textSize="24dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_alignParentRight="true"/>

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="New Note"
                android:textSize="24dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/newNoteFragmentSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:textSize="24dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_alignParentRight="true"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:weightSum="10"
            android:orientation="vertical">
            <EditText
                android:background="@android:color/transparent"
                android:id="@+id/newNoteFragmentTitle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:hint="New Title"
                android:textSize="24dp"
                android:paddingStart="4dp"
                android:textStyle="bold"
                android:layout_marginVertical="4dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:layout_weight="1"/>

            <EditText
                android:background="@android:color/transparent"
                android:id="@+id/newNoteFragmentDate"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:hint="Sunday, 20-01-2000"
                android:textSize="20dp"
                android:paddingStart="4dp"
                android:textStyle="italic"
                android:layout_marginVertical="4dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/gray"
                android:inputType="text"
                android:layout_weight="1"/>

            <EditText
                android:background="@android:color/transparent"
                android:id="@+id/newNoteFragmentLabel"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:hint="Label Blue"
                android:textSize="20dp"
                android:paddingStart="4dp"
                android:textStyle="italic"
                android:layout_marginVertical="4dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/blue"
                android:inputType="text"
                android:layout_weight="1"/>

            <EditText
                android:background="@android:color/transparent"
                android:hint=". . ."
                android:id="@+id/newNoteFragmentContent"
                android:inputType="text|textMultiLine"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif"
                android:gravity="top" />
        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>