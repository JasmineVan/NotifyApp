<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/myColor1"
            android:padding="12dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/editNoteFragmentHidenBlock"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:textSize="24dp"
                android:textColor="@color/white"
                android:gravity="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="More Fonts..."
                android:gravity="center"
                android:text="Edit Note"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/editNoteFragmentSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:textSize="24dp"
                android:textColor="@color/white"
                android:gravity="center" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:weightSum="10"
            android:orientation="vertical">
            <EditText
                android:background="@android:color/transparent"
                android:id="@+id/editNoteFragmentTitle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:hint="Title show here"
                android:textSize="24dp"
                android:paddingStart="4dp"
                android:textStyle="bold"
                android:layout_marginVertical="4dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:layout_weight="1"/>

            <TextView
                android:background="@android:color/transparent"
                android:id="@+id/editNoteFragmentLabel"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:hint="Label Blue"
                android:textSize="20dp"
                android:paddingStart="4dp"
                android:textStyle="italic"
                android:layout_marginVertical="4dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/blue"
                android:inputType="text"
                android:layout_weight="1"/>

            <EditText
                android:background="@android:color/transparent"
                android:hint="Content here"
                android:id="@+id/editNoteFragmentContent"
                android:inputType="text|textMultiLine"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7.5"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif"
                android:gravity="top" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:background="@drawable/toolbar_bg"
                android:weightSum="10">

                <View
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="0.2"
                    android:layout_gravity="center"/>

                <ImageView
                    android:id="@+id/ivEditNotePic"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:clickable="true"
                    android:padding="4dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="note_picture"
                    android:src="@drawable/ic_image"
                    android:background="@drawable/tools_bg"
                    android:visibility="visible"
                    android:layout_weight="1"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="0.2"
                    android:layout_gravity="center"/>

                <ImageView
                    android:id="@+id/ivEditNoteVid"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:clickable="true"
                    android:padding="4dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="note_video"
                    android:src="@drawable/ic_video"
                    android:visibility="visible"
                    android:background="@drawable/tools_bg"
                    android:layout_weight="1"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="0.2"
                    android:layout_gravity="center"/>

                <ImageView
                    android:id="@+id/ivEditNoteAudio"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:clickable="true"
                    android:padding="4dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="note_audio"
                    android:src="@drawable/ic_audio"
                    android:visibility="visible"
                    android:background="@drawable/tools_bg"
                    android:layout_weight="1"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="0.2"
                    android:layout_gravity="center"/>

                <ImageView
                    android:id="@+id/ivNewNoteNotification"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:clickable="true"
                    android:padding="4dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="note_notification_off"
                    android:src="@drawable/ic_noti_none"
                    android:visibility="visible"
                    android:background="@drawable/tools_bg"
                    android:layout_weight="1"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"/>

                <ImageView
                    android:id="@+id/ivEditNoteShare"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:clickable="true"
                    android:padding="4dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="note_notification_off"
                    android:src="@drawable/ic_share"
                    android:visibility="visible"
                    android:background="@drawable/tools_bg"
                    android:layout_weight="1"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="0.2"
                    android:layout_gravity="center"/>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>